% Creates a column type for tabular environment which centers a paragraph
\newcolumntype{C}[1]{>{\centering\let\newline\\\arraybackslash\hspace{0pt}}p{#1}}

% Shortcut to create an itemized list without spacing/padding between lines
\newenvironment{itemize*}%
  {\begin{itemize}%
    \setlength{\itemsep}{0pt}%
    \setlength{\parskip}{0pt}}%
  {\end{itemize}}

% Shortcut to create an enumerated list without spacing/padding between lines
\newenvironment{enumerate*}%
  {\begin{enumerate}%
    \setlength{\itemsep}{0pt}%
    \setlength{\parskip}{0pt}}%
  {\end{enumerate}}

% Shortcut to create an environment for grading rubrics (which share the same heading and rows for clarity and grammar)
\newenvironment{rubric}[4]
{
	Grading for this assignment will be marked using the following rubric:
	\begin{longtable*}{| p{1.15in} | p{1.15in} | p{1.15in} | p{1.15in} | p{1.15in} |}
	\hline
	\textbf{Criteria}
	& \textbf{Unacceptable} \newline #1 points \newline \emph{Below 60\%}
	& \textbf{Developing} \newline #2 points \newline \emph{60-79\%}
	& \textbf{Competent} \newline #3 points \newline \emph{80-89\%}
	& \textbf{Exemplary} \newline #4 points \newline \emph{90-100\%} \\ \hline
	\endhead
}
{
	\\ \hline

	Clarity
	& Unclear and not well organized
	& Generally unclear and not organized
	& Generally clear and organized
	& Very clear and well organized \\ \hline

	Grammar and Formatting
	& More than 8 errors present.
	& 6-8 errors present.
	& 3-5 errors present.
	& 0-2 errors present. \\ \hline
	\end{longtable*}
}

