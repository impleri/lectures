% Shortcut to construct weekly schedule on syllabus
\newcommand{\weekrow}[5]{#1 \newline \emph{#2} & \textbf{#3} \newline \emph{Reading}: #4 \newline \emph{Evaluation}: #5 \\ \hline}
\newcommand{\weekrowNoEval}[4]{#1 \newline \emph{#2} & \textbf{#3} \newline \emph{Reading}: #4 \\ \hline}
\newcommand{\weekrowNoPrep}[4]{#1 \newline \emph{#2} & \textbf{#3} \newline \emph{Evaluation}: #4 \\ \hline}

% Shortcut to construct a grading rubric based on 40 points per item
\newcommand{\rubricForty}[1]{
	\begin{rubric}{20--23}{24--31}{32--35}{36--40}
	#1
	\end{rubric}
}

% Shortcut to construct a grading rubric based on 25 points per item
\newcommand{\rubricQuarter}[1]{
	\begin{rubric}{12--14}{15--19}{20--22}{23--25}
	#1
	\end{rubric}
}

% Shortcut to construct a grading rubric based on 20 points per item
\newcommand{\rubricTwenty}[1]{
	\begin{rubric}{10--11}{12--15}{16--17}{18--20}
	#1
	\end{rubric}
}
