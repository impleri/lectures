\usepackage{graphicx}

% Style links to be noticeable
\definecolor{links}{HTML}{2A1B81}
\hypersetup{colorlinks,linkcolor=,urlcolor=links}

% Shortcut to put an image within a slide
\newcommand{\slide}[3]{
	\only<#1>{
		\begin{center}
			#2 \\
			\includegraphics[height=2.8in,width=3.8in,keepaspectratio=true]{../images/#3}
		\end{center}
	}
}

% Shortcut to add a session break slide
\newcommand{\timeout}{
	\begin{frame}{Break Time}
		\Huge Keep Calm and Carry On.
	\end{frame}
}

% Shortcut to add a quiz time slide
\newcommand{\quiz}{
	\section{Quiz}
	\begin{frame}{Quiz}
		\begin{center}
			\Huge Time Remaining
		\end{center}
	\end{frame}
}

% Shortcut to set title and date, then load a title slide and a table of contents slide
\newcommand{\firstslide}[2][{\date}]{
	\title{#2}
	\date{#1}

	\titlepage

	\frame{
		\frametitle{Overview}
		\tableofcontents
	}
}

% Shortcut to construct weekly schedule on intro slide (in generic-policies.tex)
\newcommand{\weekrow}[5]{\item<+->\emph{#2}: #3}